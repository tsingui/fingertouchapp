<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marekv1.fingertouch"
    android:versionCode="7"
    android:versionName="1.2.4" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/fingerprint_blue"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <receiver
            android:name="com.marekv1.fingertouch.StartFingertouchServiceAtBoot"
            android:label="StartFingertouchServiceAtBoot">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.marekv1.fingertouch.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.marekv1.fingertouch.Settings.SettingsActivity"
            android:label="@string/settings_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.marekv1.fingertouch.MainActivity" />
        </activity>

        <service
            android:name="com.marekv1.fingertouch.FingertouchService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.marekv1.fingertouch.action.startforeground" />
                <action android:name="com.marekv1.fingertouch.action.stopforeground" />
                <action android:name="com.marekv1.fingertouch.action.start" />
                <action android:name="com.marekv1.fingertouch.action.pause" />
            </intent-filter>
        </service>

        <service
            android:name="com.marekv1.fingertouch.CustomTile.FingertouchTileService"
            android:label="@string/tile_label"
            android:icon="@drawable/fingerprint_tile"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
            <meta-data android:name="android.service.quicksettings.ACTIVE_TILE"
                android:value="true" />
        </service>

    </application>

</manifest>